NODE_ENV=development
PORT=3000
# Omit /api when host is api.domain.com; use /v1 for versioning only
API_BASE_PATH=/v1
CRON_ENABLED=true
CRON_TIMEZONE=UTC
CRON_MTG_CARDS_SCHEDULE=0 3 * * *
SWAGGER_ENABLED=true
SWAGGER_PATH=/api-docs

# Supabase (for MTG cards cron)
PUBLIC_SUPABASE_URL=
SUPABASE_SERVICE_ROLE_KEY=

# TCG Daily Sync (MTG + Pokemon products and prices; tables: tcg_mtg_*, tcg_pokemon_*)
TCG_BASE_URL=https://tcgcsv.com/tcgplayer
TCG_CATEGORY_NAMES=Magic,Pokemon
TCG_CATEGORY_IDS=
TCG_REQUEST_TIMEOUT=30000
# Smaller batches avoid DB statement timeout (default 200; use 100 if still timing out)
TCG_PRODUCT_BATCH_SIZE=200
TCG_PRICE_BATCH_SIZE=1000
TCG_CONCURRENCY_LIMIT=10
CRON_TCG_DAILY_SCHEDULE=30 20 * * *
